<Window x:Class="MeasurePlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:measurePlayer="clr-namespace:MeasurePlayer"
        Title="MainWindow"
        Width="525"
        Height="350"
        d:DataContext="{d:DesignInstance measurePlayer:Vm,
                                         IsDesignTimeCreatable=False}"
        Loaded="MainWindow_OnLoaded"
        PreviewKeyDown="MainWindow_OnPreviewKeyDown"
        mc:Ignorable="d">
    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <MediaElement x:Name="MediaElement"
                          Grid.RowSpan="2"
                          LoadedBehavior="Pause"
                          MouseLeftButtonDown="VideoClick"
                          MouseWheel="VideoWheel"
                          ScrubbingEnabled="True"
                          UnloadedBehavior="Close" />

            <Grid Grid.Row="0"
                  Grid.Column="0"
                  VerticalAlignment="Bottom"
                  PreviewKeyDown="VideoKey">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ToggleButton Grid.Row="0"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Bottom"
                              HorizontalContentAlignment="Center"
                              Command="{Binding TogglePlayPauseCmd}"
                              Style="{StaticResource PlayPauseButton}" />
                <StackPanel Grid.Row="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal">
                    <TextBlock Text="{Binding CurrentTime}" />
                    <TextBlock Text="{Binding TotalTime, StringFormat='/({0}) '}" />
                </StackPanel>
                <Slider Grid.Row="1"
                        Maximum="{Binding TotalFrames}"
                        Minimum="0"
                        PreviewKeyDown="VideoKey"
                        Value="{Binding CurrentFrame}" />

            </Grid>
            <Expander x:Name="BookmarksExpander"
                      Grid.Row="0"
                      Grid.RowSpan="2"
                      Grid.Column="1"
                      ExpandDirection="Left">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="Bookmarks"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              ItemsSource="{Binding Bookmarks}"
                              SelectionChanged="Selector_OnSelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                            <DataGridTextColumn Binding="{Binding Time}" Header="Time" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="1">
                        <TextBox IsReadOnly="True" Text="{Binding Diff, StringFormat='Diff: {0}', Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                        <Button Command="{Binding SaveBookmarksCmd}">Save</Button>
                    </StackPanel>

                </Grid>

            </Expander>
            <measurePlayer:FileControl x:Name="VideoUrl"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       Path="{Binding Path,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </DockPanel>
</Window>
